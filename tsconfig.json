{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "baseUrl":"src",
        "paths":{
            "@components/*":["src/components/*"],
            "@images/*":["src/images/*"],
            "@interfaces/*":["src/interfaces/*"],
            "@styles/*":["src/styles/*"],
        },
        "jsx": "react-jsx",
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "./dist/"
    ]
}
